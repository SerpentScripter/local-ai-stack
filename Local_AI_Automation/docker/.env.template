# n8n Automation Hub - Environment Configuration Template
# Copy this file to .env and fill in your values

# ============================================
# N8N SETTINGS
# ============================================

# Admin credentials for n8n web interface
N8N_USER=admin
N8N_PASSWORD=your_secure_password_here

# Database password
N8N_DB_PASSWORD=your_db_password_here

# Local data path
LOCAL_DATA_PATH=/path/to/Local_AI_Automation/data

# ============================================
# SLACK INTEGRATION
# ============================================

SLACK_BOT_TOKEN=xoxb-your-bot-token-here
SLACK_SIGNING_SECRET=your_signing_secret_here
