SLACK_CHANNEL_DIGEST_AI=C0XXXXXXXXX
SLACK_CHANNEL_DIGEST_GRC=C0XXXXXXXXX
SLACK_CHANNEL_BACKLOG=C0XXXXXXXXX
SLACK_CHANNEL_ALERTS=C0XXXXXXXXX

# ============================================
# MICROSOFT 365 / GRAPH API
# ============================================

